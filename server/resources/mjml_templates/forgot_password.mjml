<mjml>
	<mj-body>
		<mj-section>
			<mj-column>
				<mj-image width="80px" src="https://zktimer.app/public/images/zkt-logo.png"></mj-image>

				<mj-divider border-color="#444"></mj-divider>

				<mj-text font-size="20px" color="#444444" font-family="helvetica">Merhaba {{user.first_name}},</mj-text>
				<mj-text line-height="27px" font-size="20px" color="#444444" font-family="helvetica"
					>{{message}}</mj-text
				>
				<mj-text
					font-weight="bold"
					font-size="20px"
					color="#444444"
					font-family="helvetica"
				>
					{{code}}
				</mj-text>
				<mj-divider border-color="#444"></mj-divider>

				<mj-text font-size="20px" padding-bottom="0" color="#444444" font-family="helvetica"
					>Sevgiler,<br />
				</mj-text>

				<mj-text font-size="20px" color="#444444" font-family="helvetica">Zkt-Timer Ekibi</mj-text>
			</mj-column>
		</mj-section>
	</mj-body>
</mjml>